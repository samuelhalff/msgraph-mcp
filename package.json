{
	"name": "msgraph-mcp",
	"private": true,
	"version": "0.0.0",
	"description": "Microsoft Graph integration with Model Context Protocol (MCP) for LibreChat",
	"repository": {
		"type": "git",
		"url": "https://github.com/samuelhalff/msgraph-mcp.git"
	},
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"dev": "tsx watch api/index.ts",
		"start": "tsx api/index.ts",
		"server": "tsx api/index.ts",
		"start:screen": "screen -dmS msgraph-mcp-server sh -c 'PORT=${PORT:-3001} tsx api/index.ts >> server.log 2>&1'",
		"stop:screen": "screen -S msgraph-mcp-server -X quit || true",
		"restart:screen": "npm run stop:screen && npm run start:screen",
		"build": "tsc -b",
		"lint": "eslint .",
		"test": "dotenv -e .env.test -e .env -- node test-server.js local",
		"test:remote": "dotenv -e .env.test -e .env -- node test-server.js remote",
		"test:public": "dotenv -e .env.test -e .env -- node test-server.js public",
		"test:local": "node test-server.js local"
	},
	"dependencies": {
		"express": "^4.19.2",
		"cors": "^2.8.5",
		"body-parser": "^1.20.2",
		"@azure/identity": "^4.2.0",
		"@microsoft/microsoft-graph-client": "^3.0.7",
		"@modelcontextprotocol/sdk": "^1.7.0",
		"dotenv": "^16.4.5",
		"isomorphic-fetch": "^3.0.0",
		"jsonwebtoken": "^9.0.2",
		"node-fetch": "^3.3.2",
		"tsx": "^4.19.2",
		"winston": "^3.17.0",
		"zod": "^3.24.2",
		"zod-to-json-schema": "^3.24.6"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/cors": "^2.8.17",
		"@types/body-parser": "^1.19.5",
		"@eslint/js": "^9.17.0",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^22.18.0",
		"dotenv-cli": "^7.4.4",
		"eslint": "^9.17.0",
		"globals": "^16.3.0",
		"typescript": "~5.6.2",
		"typescript-eslint": "^8.18.2"
	}
}