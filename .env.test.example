# Microsoft Graph MCP Server Test Configuration
# Copy this file to .env.test and fill in your values

# Server URLs
LOCAL_URL=http://localhost:3001
REMOTE_URL=http://msgraph-mcp:3001
PUBLIC_REMOTE_URL=https://your-domain.com

# Test Configuration  
TEST_TIMEOUT=30000
VERBOSE=true

# OAuth Configuration (Required for OAuth tests)
# These should match your LibreChat configuration

# Azure App Registration
OAUTH_CLIENT_ID=your-client-id-here
OAUTH_TENANT_ID=your-tenant-id-here

# OAuth URLs (auto-generated if not set)
OAUTH_REDIRECT_URI=https://your-domain.com/api/mcp/msgraph/oauth/callback
OAUTH_AUTHORIZATION_URL=https://login.microsoftonline.com/your-tenant-id/oauth2/v2.0/authorize
OAUTH_TOKEN_URL=https://login.microsoftonline.com/your-tenant-id/oauth2/v2.0/token
OAUTH_SCOPE=https://graph.microsoft.com/.default

# Alternative: Use existing server environment variables
# The test script will use CLIENT_ID and TENANT_ID if OAUTH_* vars are not set
# CLIENT_ID=your-client-id-here
# TENANT_ID=your-tenant-id-here
